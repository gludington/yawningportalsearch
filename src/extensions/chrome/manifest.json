{
    "manifest_version": 3,
    "name": "Yawning Portal Search",
    "version": "1.3",
    "description": " - Creates a Search Widget on an Upcoming Events Page",
    "homepage_url": "https://gludington.github.io/yawningportalsearch/",
    "icons": {
        "16" : "d20_16.png",
        "32": "d20_32.png",
        "48": "d20_48.png",
        "128": "d20_128.png"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "https://*.dnd.wizards.com/"
    ],
    "content_scripts": [{
        "matches": ["https://*.dnd.wizards.com/*"],
        "js":["search.js"]
    }]
}